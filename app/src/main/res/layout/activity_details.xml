<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayy">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:fitsSystemWindows="true"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/details_movie_poster"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:contentDescription="@string/poster_image_content_description"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />


        <TextView
            android:id="@+id/button"
            style="@style/tv_movie_details"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/clock_circular"
            android:drawableStart="@drawable/clock_circular"
            android:text="120m"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/details_movie_release_date"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_poster" />

        <TextView
            android:id="@+id/details_movie_release_date"
            style="@style/tv_movie_details"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:drawableLeft="@drawable/calendar"
            android:drawableStart="@drawable/calendar"
            app:layout_constraintLeft_toRightOf="@+id/button"
            app:layout_constraintRight_toLeftOf="@+id/details_movie_vote_average"
            app:layout_constraintTop_toTopOf="@+id/button" />

        <TextView
            android:id="@+id/details_movie_vote_average"
            style="@style/tv_movie_details"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/star"
            android:drawableStart="@drawable/star"
            app:layout_constraintLeft_toRightOf="@+id/details_movie_release_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/details_movie_release_date" />

        <TextView
            android:id="@+id/details_movie_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:padding="4dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_release_date" />

        <TextView
            android:id="@+id/tv_no_videos_result"
            style="@style/tv_movie_no_data_reults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/no_video_results"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/tv_no_reviews_result"
            style="@style/tv_movie_no_data_reults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/no_reviews_results"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <ProgressBar
            android:id="@+id/pb_loading_videos"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:indeterminateDrawable="@drawable/gray_circluar"
            android:max="100"
            android:maxHeight="35dip"
            android:maxWidth="35dip"
            android:padding="8dp"
            android:progress="20"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ProgressBar
            android:id="@+id/pb_loading_reviews"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:indeterminateDrawable="@drawable/gray_circluar"
            android:max="100"
            android:maxHeight="35dip"
            android:maxWidth="35dip"
            android:padding="8dp"
            android:progress="20"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_recycler_view"
            style="@style/rv_movie_details"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/video_recycler_view"
            style="@style/rv_movie_details"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            style="@style/tv_movie_details_title"
            android:text="@string/videos"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_overview" />

        <TextView
            android:id="@+id/textView5"
            style="@style/tv_movie_details_title"
            android:text="@string/reviews"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_recycler_view" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>